<h1> Update <%= @employee.name %> </h1>

<form action="/employees/<%= @employee.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="division_id">Select a Division</label>
    <select id='division_id' name='division_id' type='text'>
      <% @divisions.each() do |division| %>
        <option value="<%= division.id()%>"> <%= division.name() %> </option>
      <% end %>
    </select>
  <button type="submit">Reassign</button>
</form>

<form action='/employess/<%= @employee.id %>' method='post'>
  <div class='form-group'>
    <input name="_method" type="hidden" value="delete">
    <button id='delete_employee' class='btn-danger'>Delete</button>
  </div>
</form>
